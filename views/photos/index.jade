extends ../layout

block content
  div(id="userAccess")
    if(isLoggedIn)
      button(id="new_photo" class="btn btn-blue btn-border-o") Add New Photo
      button(id="logOut" class="btn btn-blue btn-border-o") Log Out
    else
      button(id="logIn" class="btn btn-blue btn-border-o") Log In
      button(id="signUp" class="btn btn-blue btn-border-o") Sign Up

  img(id="first_image" src="http://happybirthdaycakeimages.com/wp-content/uploads/2016/01/i-love-you-Happy-Mothers-Day.jpg")

  hr
  div(id="container")
    each photo in photos
      div(class="photo")
        a(href='/gallery/' + photo.id)
          img(src= photo.link)
        p= photo.author
        p= photo.link

  script(src="/js/index.js")
